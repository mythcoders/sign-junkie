.row
  .col-6
    .card
      .card-body
        - @workshop.images.each do |img|
          %img.card-img{src: url_for(img)}
  .col-6
    .card
      %h4.card-header.bg-primary.text-white
        = @workshop.name
      - if user_signed_in?
        - if @workshop.can_purchase?
          = form_for :cart_item, url: cart_index_path do |f|
            = f.hidden_field :workshop_id, value: @workshop.id
            .card-body
              = render partial: 'body'
              = render partial: 'form', locals: { f: f }
            .card-footer
              = ticket_dropdown f, @workshop
        - else
          .card-body
            = render partial: 'body'
          .card-footer
            = link_to 'Go Back', workshops_path, class: 'btn btn-outline-secondary'
            .text-muted Sorry, but tickets for this workshop can't be purchased right now
      - else
        .card-body
          = render partial: 'body'
        .card-footer
          = link_to 'Go Back', workshops_path, class: 'btn btn-outline-secondary'
          %a.btn.btn-primary(href=new_user_session_path)
            = fa_light 'sign-in'
            Log In or Sign up to add this to your cart
