- @workshops.each do |workshop|
  .workshop-row-item.text-center
    - if workshop.images.any?
      %img.img-fluid.img-thumbnail{alt: "Image of #{workshop.name}", src: url_for(workshop.images.first)}
    - else
      %img.img-fluid.img-thumbnail{alt: "Image of #{workshop.name}", src: '/cover.jpg'}
    .col.d-lg-none
      %a{href: workshop_path(workshop)}
        = workshop.when
        %br
        = workshop.name
      .text-primary
        = "Starting at #{number_to_currency(workshop.starting_price)}"
      %span.text-warning= workshop.seats_available
      %span.text-primary seats left!
    .col.d-none.d-lg-inline
      %h5.card-title
        %a{href: workshop_path(workshop)}
          = workshop.when
          %br
          = workshop.name
      %h5.text-primary
        = "Starting at #{number_to_currency(workshop.starting_price)}"
      %h5
        %span.text-warning= workshop.seats_available
        %span.text-primary seats left!
