- page_title @address.customer.full_name, 'Addresses', "Edit #{@address.nickname}"

.row
  .col-sm-8.offset-sm-2
    = form_for @address, url: address_path(@address), method: :patch do |f|
      .card
        %h4.card-header.bg-primary.text-white= "Edit #{@address.nickname}"
        .card-body
          = error_messages_for 'address'
          = render partial: 'addresses/form', locals: { f: f }
        .card-footer
          = link_to 'Cancel', addresses_path, class: 'btn btn-outline-secondary'
          = f.submit 'Save changes', class: 'btn btn-success'
