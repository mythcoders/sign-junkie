.position-absolute.w-100.p-4.d-flex.flex-column.justify-content-center.align-items-center
  - counter = 0
  - flash.each do |type, message|
    - next unless %w[success notice info warning error].include?(type)
    - counter+= 1
    - delay = counter * 1750 + 3500
    .toast{"aria-atomic" => "true", "aria-live" => "assertive", :role => "alert", "data-delay": delay, :style => "bottom: auto; left: auto; min-width: 275px;"}
      .toast-header
        %h4.mb-0.mr-auto= type.humanize
        -# %small.text-muted just now
        %button.ml-3.mb-n1.close{"aria-label" => "Close", "data-dismiss" => "toast", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .toast-body= message
