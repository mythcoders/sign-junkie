%footer.bd-footer.d-print-none
  .container
    .row.justify-content-around
      .col
        %ul.bd-footer-links
          %li
            %a{href: ClientInfo.facebook_link}
              = fa_brands 'facebook-square'
              Facebook
          %li
            %a{href: ClientInfo.instagram_link}
              = fa_brands 'instagram-square'
              Instagram
          %li= link_to 'Contact Us', contact_path
          %li= link_to 'About Us', about_path
          %li= link_to 'Privacy Policy', privacy_path
        = link_to contact_path do
          .address
            = ClientInfo.address_1
            %br= "#{ClientInfo.city}, #{ClientInfo.state} #{ClientInfo.zip_code}"
        .text-muted
          %br
          %a{href: root_path}= "\u00A9 #{Time.zone.today.year} #{ClientInfo.owner}"
          |
          %a{href: 'https://mythcoders.com', target: '_blank'} Powered by MythCoders, LLC
