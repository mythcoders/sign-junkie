.row
  .col.col-lg-6.mb-2
  .col.col-lg-6.mb-2
    .card
      %h4.card-header.bg-primary.text-white
        Gift Card
      - if user_signed_in?
        = form_for :cart, url: cart_index_path do |f|
          .card-body
            .card-text
              Instructions for how this works.
            .form-row
              .form-group.col-md-6
                = f.label :first_name
                = f.text_field :first_name, class: 'form-control'
              .form-group.col-md-6
                = f.label :last_name
                = f.text_field :last_name, class: 'form-control'
            .form-row
              .form-group.col
                = f.label :email
                = f.text_field :email, class: 'form-control'
            .form-row
              .form-group.col
                %label{:for => "gift_amount"} Price
                %select#gift_amount.form-control{name: 'cart[gift_amount]'}
                  %option{:value => '25'} $25.00
                  %option{:value => '30'} $30.00
                  %option{:value => '40'} $40.00
                  %option{:value => '50'} $50.00
                  %option{:value => '75'} $75.00
                  %option{:value => '100'} $100.00
          .card-footer
            %button.btn.btn-outline-success{:title => "Add to cart", :type => "submit"}
              %i.fas.fa-cart-plus
              %span Add to Cart
      - else
        .card-body
          = render partial: 'body'
          %a.btn.btn-primary(href=new_user_session_path)
            = fa_light 'sign-in'
            Log In or Sign up to add this to your cart

= content_for :styles do
  %style{src: "https://cdn.jsdelivr.net/npm/lightgallery.js@1.1.3/src/css/lightgallery.css"}

= content_for :scripts do
  %script{src: "https://cdn.jsdelivr.net/npm/lightgallery.js@1.1.3/lib/js/lightgallery.min.js"}
  :javascript
    lightGallery(document.getElementById('lightgallery'));
