.row.justify-content-center.mt-3
  .col
    .card.mb-3
      %h2.card-header.bg-primary.text-white.text-center
        Contact Us
.row
  .col
    %div#googleMap{style: "width:100%;height:400px;"}
  .col
    %h5.text-danger Address
    .address.mb-2
      %strong
        11235 Ridenour Rd
        %br Thornville, OH 43076
    %h5.text-danger Email
    %p
      %a{href: "mailto:#{ClientInfo.contact_email}"}= ClientInfo.contact_email
    %a{href: ClientInfo.facebook_link}
      %h4
        = fa_brands 'facebook'
        Facebook
    %a{href: ClientInfo.instagram_link}
      %h4
        = fa_brands 'instagram'
        Instagram

= content_for :scripts do
  :javascript
    function renderMap() {
      var location = new google.maps.LatLng(39.8644078,-82.434);
      var props = {
        center: location,
        zoom: 17,
        mapTypeId: google.maps.MapTypeId.HYBRID
      };
      var map = new google.maps.Map(document.getElementById('googleMap'), props);
      var marker = new google.maps.Marker({
        position: location,
        map: map,
        title: 'Sign Junkie'
      });
    }
  %script{src: "https://maps.googleapis.com/maps/api/js?key=AIzaSyBMAZg6UEdBTJCgUqgneFCeiDZdDs0uBYA&callback=renderMap"}
