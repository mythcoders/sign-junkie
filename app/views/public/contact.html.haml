= content_for :scripts do
  :javascript
    function renderMap() {
      var location = new google.maps.LatLng(39.8644078,-82.434);
      var props = {
        center: location,
        zoom: 17,
        mapTypeId: google.maps.MapTypeId.HYBRID
      };
      var map = new google.maps.Map(document.getElementById('googleMap'), props);
      var marker = new google.maps.Marker({
        position: location,
        map: map,
        title: 'Sign Junkie'
      });
    }
  %script{src: "https://maps.googleapis.com/maps/api/js?key=AIzaSyBMAZg6UEdBTJCgUqgneFCeiDZdDs0uBYA&callback=renderMap"}
