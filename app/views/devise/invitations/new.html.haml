
- content_for :devise_header do
  = t "devise.invitations.new.header"

= form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post } do |f|
  = render partial: 'devise/shared/error_messages'
  = f.hidden_field :reset_password_token
  = resource.class.invite_key_fields.each do |field|
    .form-group
      = f.label field
      = f.password_field field, class: 'form-control', autocomplete: 'off'
  .form-group
    = f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-teal btn-block btn-login'
