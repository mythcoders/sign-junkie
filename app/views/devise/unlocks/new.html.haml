- content_for :devise_header do
  Resend unlock instructions

= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f|
  = render partial: 'devise/shared/error_messages'

  .form-group
    .input-group
      .input-group-prepend
        %span.input-group-text
          = fa_solid 'lock-alt'
      = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'name@address.com'
  .form-group
    = f.submit 'Resend unlock instructions', class: 'btn btn-teal btn-block btn-login'
