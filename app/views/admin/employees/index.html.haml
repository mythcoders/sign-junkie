- page_title 'Employee Search'

.header.mt-md-2
  .header-body
    .row.align-items-center
      .col
        %h6.header-pretitle
          Employees
        %h1.header-title
          %i.fad.fa-users
          Search
      .col-auto
        = link_to 'New Employee', new_admin_employee_path, class: 'btn btn-primary lift'

.card
  .table-responsive
    %table.table.card-table.table-hover
      %thead
        %tr
          %th First Name
          %th Last Name
          %th Role
      %tbody
        - @employees.each do |e|
          %tr{data: { 'clickable-row': '', 'href': admin_employee_path(e) }}
            %td= e.first_name
            %td= e.last_name
            %td= e.role
      %tfoot
        %tr
          %td{colspan: '100%'}
            = paginate @employees
            = page_entries_info @employees
