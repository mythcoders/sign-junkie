      .col-3
        .card
          .card-header
            %h5.card-header-title Taxes
          %ul.list-group
            %li.list-group-item
              = fa_solid 'percent', 'fa-fw'
              7.25%
            %li.list-group-item
              = fa_solid 'calendar-alt', 'fa-fw'
              00/00/00 - 00/00/00
            %li.list-group-item
              %strong Due
              00/00/00 (2 days)
            %li.list-group-item
              %strong Estimated Liability
              $23.95
      .col-6
        .card
          .card-header
            %h5.card-header-title Sales Breakdown
