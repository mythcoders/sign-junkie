      .card-body
        .row.align-items-center
          .col
            %h6.card-title.text-uppercase.text-muted.mb-2
              Unused credits
            %span.h2.mb-0.text-info $450
          .col-auto
            %span.h2.fas.fa-briefcase.text-muted.mb-0
    .card
      .card-body
        .row.align-items-center
          .col
            %h6.card-title.text-uppercase.text-muted.mb-2
              Total Invoices
            %span.h2.mb-0.text-info 1
          .col-auto
            %span.h2.fas.fa-briefcase.text-muted.mb-0
  .col-9
    .row
      .col-12
        .alert.alert-info
          %h4.alert-heading
            = fa_regular 'exclamation-triangle'
            Heads Up
          %h5 Refunds Issued
          %p
            %strong 2/24/2019 -
            Daniel Saum $35
          %h5 Sales Tax
          %p
            %strong 2/24/2019 -
            Your Sales Tax is due in 2 days
