    .card
      .card-body
        .row.align-items-center
          .col
            %h6.card-title.text-uppercase.text-muted.mb-2
              Payments
            %span.h2.mb-0.text-success $243
          .col-auto
            %span.h2.fas.fa-briefcase.text-muted.mb-0
    .card
      .card-body
        .row.align-items-center
          .col
            %h6.card-title.text-uppercase.text-muted.mb-2
              Refunds
            %span.h2.mb-0.text-danger $50
          .col-auto
            %span.h2.fas.fa-briefcase.text-muted.mb-0
