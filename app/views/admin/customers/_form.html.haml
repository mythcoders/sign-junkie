= f.hidden_field :id
.form-row
  .form-group.col-3
    = f.label :first_name, class: 'col-form-label'
    = f.text_field :first_name, class: 'form-control'
  .form-group.col-1
    = f.label :middle, class: 'col-form-label'
    = f.text_field :middle_name, class: 'form-control'
  .form-group.col-3
    = f.label :last, class: 'col-form-label'
    = f.text_field :last_name, class: 'form-control'
.form-row
  .form-group.col-2
    = f.label :role, class: 'col-form-label'
    = f.select(:role, User.roles.keys,
      { include_blank: ' - Select - ', disabled: %i[employee admin operator] },
      { class: 'custom-select' })
  .form-group.col-2
    = f.label :phone_number, class: 'col-form-label'
    = f.text_field :phone_number, class: 'form-control'
  .form-group.col-3
    = f.label :email, class: 'col-form-label'
    = f.text_field :email, class: 'form-control'