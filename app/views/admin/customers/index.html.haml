- page_title 'Customer Search'

.header.mt-md-2
  .header-body
    .row.align-items-center
      .col
        %h6.header-pretitle
          Customers
        %h1.header-title
          %i.fad.fa-address-book
          Search
      .col-auto
        = link_to 'New Customer', new_admin_customer_path, class: 'btn btn-primary lift'

.card
  .table-responsive
    %table.table.card-table.table-hover
      %thead
        %tr
          %th First Name
          %th Last Name
      %tbody
        - @customers.each do |c|
          %tr{data: { 'clickable-row': '', 'href': admin_customer_path(c) }}
            %td= c.first_name
            %td= c.last_name
      %tfoot
        %tr
          %td{colspan: '100%'}
            = paginate @customers
            = page_entries_info @customers
