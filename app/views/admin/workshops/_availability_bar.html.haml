- bar_class = 'bg-danger' if value <= 25
- bar_class = 'bg-warning'  if value <= 50 && value > 25
- bar_class = 'bg-success'  if value >= 51
.progress-bar{class: bar_class,
              "aria-valuemax": "100",
              "aria-valuemin": "0",
              "aria-valuenow": value,
              title: "#{value.round}%",
              role: "progressbar",
              style: "width: #{value}%"}
