= f.hidden_field :id
.form-row
  .form-group.col-6
    = f.label :name, class: 'col-form-label'
    = f.text_field :name, class: 'form-control'
  .form-group.col-3
    = f.label :start_date, class: 'col-form-label'
    #startpicker.input-group.date{"data-target-input": "nearest", 'data-date-time-picker': ''}
      = f.text_field :start_date, value: lifp(@workshop.start_date), class: 'form-control datetimepicker-input', 'data-target': '#startpicker'
      .input-group-append{"data-target": "#startpicker", "data-toggle": "datetimepicker"}
        .input-group-text
          = fa_regular 'calendar'
  .form-group.col-3
    = f.label :end_date, class: 'col-form-label'
    #endpicker.input-group.date{"data-target-input": "nearest", 'data-date-time-picker': ''}
      = f.text_field :end_date, value: lifp(@workshop.end_date), class: 'form-control datetimepicker-input', 'data-target': '#endpicker'
      .input-group-append{"data-target": "#endpicker", "data-toggle": "datetimepicker"}
        .input-group-text
          = fa_regular 'calendar'
.form-group
  = f.label :description, class: 'col-form-label'
  = f.text_area :description, class: 'form-control', rows: 3
%hr
.form-row
  .form-group.col-3
    = f.label :date_available_for_purchase, class: 'col-form-label'
    #postingstartpicker.input-group.date{"data-target-input": "nearest", 'data-date-time-picker': ''}
      = f.text_field :posting_start_date, value: lifp(@workshop.posting_start_date), class: 'form-control datetimepicker-input', 'data-target': '#postingstartpicker'
      .input-group-append{"data-target": "#postingstartpicker", "data-toggle": "datetimepicker"}
        .input-group-text
          = fa_regular 'calendar'
  .form-group.col-2
    = f.label :total_tickets_for_sale, class: 'col-form-label'
    = f.text_field :tickets_available, class: 'form-control'
  .form-group.col-2
    = f.label :ticket_price, class: 'col-form-label'
    .input-group
      .input-group-prepend
        %span.input-group-text= fa_regular 'dollar-sign'
      = f.text_field :ticket_price, class: 'form-control'
.form-group.custom-check.custom-control
  = f.check_box :is_for_sale, class: 'custom-control-input'
  = f.label :is_for_sale, class: 'custom-control-label'
