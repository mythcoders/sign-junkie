= f.hidden_field :id
.form-row
  .form-group.col-6
    = f.label :name, class: 'col-form-label'
    = f.text_field :name, class: 'form-control'
  .form-group.col-3
    = f.label :start_date, class: 'col-form-label'
    #startpicker.input-group.date{"data-target-input": "nearest", 'data-date-time-picker': ''}
      = f.text_field :start_date, value: lifp(@workshop.start_date), class: 'form-control datetimepicker-input', 'data-target': '#startpicker'
      .input-group-append{"data-target": "#startpicker", "data-toggle": "datetimepicker"}
        .input-group-text
          = fa_regular 'calendar'
  .form-group.col-3
    = f.label :end_date, class: 'col-form-label'
    #endpicker.input-group.date{"data-target-input": "nearest", 'data-date-time-picker': ''}
      = f.text_field :end_date, value: lifp(@workshop.end_date), class: 'form-control datetimepicker-input', 'data-target': '#endpicker'
      .input-group-append{"data-target": "#endpicker", "data-toggle": "datetimepicker"}
        .input-group-text
          = fa_regular 'calendar'
.form-group
  = f.label :description, class: 'col-form-label'
  = f.text_area :description, class: 'form-control', rows: 3
.form-row
  .form-group.col-lg-2
    = f.label :is_public, class: 'control-label'
    .custom-control.custom-radio
      = f.radio_button :is_public, 'true', class: 'custom-control-input'
      %label.custom-control-label{for: "workshop_is_public_true"} Public Workshop
    .custom-control.custom-radio
      = f.radio_button :is_public, 'false', class: 'custom-control-input'
      %label.custom-control-label{for: "workshop_is_public_false"} Private Workshop
%hr
%h2 Tickets
.form-row
  .form-group.col-3
    .custom-switch.custom-control
      = f.check_box :is_for_sale, class: 'custom-control-input'
      = f.label :is_for_sale, class: 'custom-control-label'
.form-row
  .form-group.col-3
    = f.label :posting_start_date, class: 'col-form-label'
    #postingstartpicker.input-group.date{"data-target-input": "nearest", 'data-date-time-picker': ''}
      = f.text_field :posting_start_date, value: lifp(@workshop.posting_start_date), class: 'form-control datetimepicker-input', 'data-target': '#postingstartpicker'
      .input-group-append{"data-target": "#postingstartpicker", "data-toggle": "datetimepicker"}
        .input-group-text
          = fa_regular 'calendar'
  .form-group.col-3
    = f.label :posting_end_date, class: 'col-form-label'
    #postingendpicker.input-group.date{"data-target-input": "nearest", 'data-date-time-picker': ''}
      = f.text_field :posting_end_date, value: lifp(@workshop.posting_end_date), class: 'form-control datetimepicker-input', 'data-target': '#postingendpicker'
      .input-group-append{"data-target": "#postingendpicker", "data-toggle": "datetimepicker"}
        .input-group-text
          = fa_regular 'calendar'
  .form-group.col-2
    = f.label :total_tickets, class: 'col-form-label'
    = f.text_field :total_tickets, class: 'form-control'
  .form-group.col-2
    = f.label :ticket_price, class: 'col-form-label'
    .input-group
      .input-group-prepend
        %span.input-group-text= fa_regular 'dollar-sign'
      = f.text_field :ticket_price, class: 'form-control'

