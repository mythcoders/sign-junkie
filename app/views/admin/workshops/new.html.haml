- page_title 'New', 'workshop'

= form_for @workshop, url: admin_workshops_path, local: true do |f|
  .row
    .col-12.col-md-5
      .card
        %h5.card-header.bg-primary.text-white
          New Workshop
        .card-body
          = error_messages_for 'workshop'
          = render partial: 'admin/workshops/form', locals: { f: f }
        .card-footer
          = link_to 'Cancel', admin_workshops_path, class: 'btn btn-outline-secondary'
          = f.submit 'Create', class: 'btn btn-success'
    .col-12.col-md-7
      .card
        %h5.card-header.bg-primary.text-white
          Projects
        .card-body
          = collection_check_boxes(:workshop, :project_ids, Project.order(name: :asc).all, :id, :name) do |b|
            .custom-control.custom-checkbox
              = b.check_box(class: 'custom-control-input')
              = b.label(class: 'custom-control-label')
