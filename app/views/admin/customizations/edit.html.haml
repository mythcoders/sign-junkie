- page_title 'Edit', 'Customization'

= form_for @customization, url: admin_customization_path(@customization), method: :patch do |f|
  .card
    %h5.card-header.bg-primary.text-white
      Edit Customization
    .card-body
      = error_messages_for 'customization'
      = render partial: 'admin/customizations/form', locals: { f: f }
    .card-footer
      = link_to 'Cancel', admin_customizations_path, class: 'btn btn-outline-secondary'
      = f.submit 'Create', class: 'btn btn-success'
