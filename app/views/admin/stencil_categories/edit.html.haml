- page_title 'Edit', 'Stencil Categories'
= render partial: 'destory_confirmation'

.header
  .header-body
    .row.align-items-center
      .col
        %h6.header-pretitle
          Stencil Categories
        %h1.header-title
          %i.fad.fa-swatchbook
          = "Edit #{@category.name}"

= form_for @category, url: admin_stencil_category_path(@category), method: :patch do |f|
  .row
    .col-12.col-lg-5
      .card
        .card-body
          = error_messages_for 'category'
          = render partial: 'admin/stencil_categories/form', locals: { f: f }
        .card-footer
          = link_to 'Cancel', admin_stencil_categories_path(@stencil), class: 'btn btn-outline-secondary'
          = f.submit 'Save Changes', class: 'btn btn-success'
          %a.btn.btn-danger{"data-target": "#destroymodal", "data-toggle": "modal", href: "#"}
            Delete
    .col-12.col-lg-7
      .card
        .card-header
          %h5.card-header-title Stencils
        .card-body
          %ul
            - @category.stencils.each do |stencil|
              %li
                %a{href: admin_stencil_path(stencil)}= stencil.name
