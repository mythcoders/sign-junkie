- page_title 'Edit', 'Add-ons'

.header
  .header-body
    .row.align-items-center
      .col
        %h6.header-pretitle
          Project Add-ons
        %h1.header-title
          %i.fad.fa-stamp
          Edit

= form_for @addon, url: admin_addon_path(@addon), method: :patch do |f|
  .card
    .card-body
      = error_messages_for 'addon'
      = render partial: 'admin/addons/form', locals: { f: f }
    .card-footer
      = link_to 'Cancel', admin_addons_path, class: 'btn btn-outline-secondary'
      = f.submit 'Save Changes', class: 'btn btn-success'
