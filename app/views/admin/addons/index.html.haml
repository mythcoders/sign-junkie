- page_title 'Add-ons Search'

.header.mt-md-2
  .header-body
    .row.align-items-center
      .col
        %h6.header-pretitle
          Project Add-ons
        %h1.header-title
          %i.fad.fa-stamp
          Search
      .col-auto
        = link_to 'New Add-on', new_admin_addon_path, class: 'btn btn-primary lift'

.card
  .table-responsive
    %table.table.card-table.table-hover
      %thead
        %tr
          %th Name
          %th Price
      %tbody
        - @addons.each do |c|
          %tr{data: { 'clickable-row': '', 'href': admin_addon_path(c) }}
            %td= c.name
            %td= number_to_currency(c.price)
      %tfoot
        %tr
          %td{colspan: '100%'}
            = paginate @addons
            = page_entries_info @addons
