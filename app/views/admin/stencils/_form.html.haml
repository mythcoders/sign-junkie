= f.hidden_field :id
.form-group
  = f.label :name, class: 'col-form-label'
  = f.text_field :name, class: 'form-control'
.form-group
  = f.label :parent_category, class: 'col-form-label'
  = f.select :parent_id,
      options_from_collection_for_select(@categories, 'id', 'name', @category.parent_id),
      { include_blank: '- Select optional parent -' },
      { class: 'form-control custom-select' }
