
- page_title 'Stencils Search'

.header.mt-md-2
  .header-body
    .row.align-items-center
      .col
        %h6.header-pretitle
          Stencils
        %h1.header-title
          %i.fad.fa-swatchbook
          = @stencil.name
      .col-auto
        = render partial: 'admin/stencils/header'
.row
  .col-12.col-lg-4
    .card
      .card-header
        %h2.card-header-title Information
      .card-body
        .form-group
          %label.col-form-label Category
          .form-control-plaintext
            = link_to @stencil.category.name, edit_admin_stencil_category_path(@stencil.category)
        .form-group
          %label.col-form-label Allowed to be personalized?
          .form-control-plaintext= human_boolean @stencil.allow_personilization
  .col-12.col-lg-8
    %ul#tab.nav.nav-tabs.mb-2{role: "tablist"}
      %li.nav-item
        %a#image-tab.nav-link.active{"aria-controls": "image", "aria-selected": "false", "data-toggle": "tab", href: "#image", role: "tab"}
          = fa_solid 'images'
          Images

    #tabContent.tab-content
      #image.tab-pane.fade.show.active{"aria-labelledby": "image-tab", role: "tabpanel"}
        - unless @stencil.image.attached?
          .card.mt-2
            .card-body
              .text-muted No images have been uploaded
        - else
          %ul.list-group
            %li.list-group-item.px-0
              .row.align-items-center
                .col-auto
                  %a.avatar.avatar-xxl{:href => rails_blob_path(@stencil.image), target: '_blank'}
                    %img.avatar-img.rounded{:alt => 'Workshop image', :src => rails_blob_path(@stencil.image)}
                .col.ml-n2
                  %h4.card-title.mb-1.name Image #1
                  %p.card-text.small.text-muted
                    Uploaded on
                    = lifp @stencil.image.created_at
                .col-auto
                  .btn-group.mr-2{'aria-label': 'First group', role: 'group'}
                    %a.btn.btn-sm.btn-white.d-none.d-md-inline-block.lift{:href => rails_blob_path(@stencil.image, disposition: "attachment")}
                      Download
                    .btn-group
                      %button#btnGroupDrop1.btn.btn-sm.btn-white.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                        %i.fas.fa-ellipsis-h
                      .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "btnGroupDrop1"}
                        = link_to "Delete", admin_delete_image_path(@stencil.image), method: :delete, class: 'dropdown-item', data: {confirm: 'Are you sure want to delete this image? This can not be undone!'}
