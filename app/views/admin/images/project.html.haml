- page_title 'New', 'Project Image'

= form_for @project, url: admin_upload_project_image_path(@project), method: 'post', local: true do |f|
  .card
    %h5.card-header.bg-primary.text-white
      = fa_solid 'sign'
      = "New Image for #{@project.name}"
    .card-body
      = error_messages_for 'project'
      = f.hidden_field :id
      .form-group
        .custom-file
          = f.file_field :images, multiple: true, class: 'custom-file-input'
          = f.label :select_one_or_more_images_to_upload, class: 'custom-file-label'
    .card-footer
      = link_to 'Cancel', admin_project_path(@project), class: 'btn btn-outline-secondary'
      = f.submit 'Upload', class: 'btn btn-success'

- content_for :scripts do
  :javascript
    document.addEventListener('DOMContentLoaded', function() {
      bsCustomFileInput.init()
    });
