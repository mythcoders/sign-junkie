- page_title 'Invoice Search'

.header.mt-md-2
  .header-body
    .row.align-items-center
      .col
        %h6.header-pretitle
          Invoices
        %h1.header-title
          %i.fad.fa-file-invoice-dollar
          Search

.card
  .table-responsive
    %table.table.card-table.table-hover
      %thead
        %tr
          %th Number
          %th Customer
          %th Date
          %th Status
      %tbody
        - @invoices.each do |o|
          %tr{data: { 'clickable-row': '', 'href': admin_invoice_path(o) }}
            %td= o.identifier
            %td= o.customer.full_name
            %td= lifp(o.created_at, :short)
            %td= render partial: 'statuses/invoice', locals: { invoice: o }
      %tfoot
        %tr
          %td{colspan: '100%'}
            = paginate @invoices
            = page_entries_info @invoices
