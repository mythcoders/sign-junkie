= f.hidden_field :id
.form-row
  .form-group.col-6
    = f.label :name, class: 'col-form-label'
    = f.text_field :name, class: 'form-control'
  .form-group.col-3
    = f.label :start_date, class: 'col-form-label'
    = f.text_field :start_date, class: 'form-control'
  .form-group.col-3
    = f.label :end_date, class: 'col-form-label'
    = f.text_field :end_date, class: 'form-control'
.form-group
  = f.label :description, class: 'col-form-label'
  = f.text_area :description, class: 'form-control', rows: 3
%hr
.form-row
  .form-group.col-3
    = f.label :posting_start_date, class: 'col-form-label'
    = f.text_field :posting_start_date, class: 'form-control'
  .form-group.col-2
    = f.label :tickets_available, class: 'col-form-label'
    = f.text_field :tickets_available, class: 'form-control'
  .form-group.col-2
    = f.label :ticket_price, class: 'col-form-label'
    .input-group
      .input-group-prepend
        %span.input-group-text= fa_regular 'dollar-sign'
      = f.text_field :ticket_price, class: 'form-control'
.form-group.form-check
  = f.check_box :is_for_sale, class: 'form-check-input'
  = f.label :is_for_sale, class: 'col-check-label'
