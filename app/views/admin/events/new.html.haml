- page_title 'New', 'Event'

= form_for @event, url: admin_events_path, local: true do |f|
  .card
    %h5.card-header.bg-primary.text-white
      New Event
    .card-body
      = error_messages_for 'event'
      = render :partial => 'admin/events/form', locals: { f: f }
    .card-footer
      = link_to 'Cancel', admin_events_path, class: 'btn btn-outline-secondary'
      = f.submit 'Create', class: 'btn btn-success'