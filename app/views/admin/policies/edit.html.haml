- content_for :head do
  = javascript_import_module_tag "editor"
- page_title 'Edit', @policy.title, 'Policies'

.header
  .header-body
    .row.align-items-center
      .col
        %h6.header-pretitle
          Policies
        %h1.header-title
          %i.fad.fa-file-contract
          = "Edit #{@policy.name}"

= form_for @policy, url: admin_policy_path(@policy), method: :patch do |f|
  .row.justify-content-center
    .col.col-lg-8.col-md-12
      .card.mt-3
        .card-body
          = error_messages_for 'policy'
          = render partial: 'admin/policies/form', locals: { f: f }
        .card-footer
          = link_to 'Cancel', admin_policies_path, class: 'btn btn-outline-secondary'
          = f.submit 'Save', class: 'btn btn-success'
          .float-right
            = link_to "Delete", admin_policy_path(@policy), method: :delete, class: 'btn btn-outline-danger',
              data: {confirm: 'Are you sure want to delete this policy? This can not be undone!'}
