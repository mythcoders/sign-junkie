- page_title 'Workshop Search'

.header.mt-md-2
  .header-body
    .row.align-items-center
      .col
        %h6.header-pretitle
          Workshop Types
        %h1.header-title
          %i.fad.fa-chalkboard-teacher
          Search
      .col-auto
        = link_to 'New Workshop Type', new_admin_workshop_type_path, class: 'btn btn-primary lift'

.card
  .table-responsive
    %table.table.card-table.table-hover
      %thead
        %tr
          %th Name
          %th Active?
          %th individual Seats?
          %th Reservations?
      %tbody
        - @types.each do |t|
          %tr{data: { 'clickable-row': '', 'href': edit_admin_workshop_type_path(t) }}
            %td= t.name
            %td= human_boolean t.active
            %td= human_boolean t.default_single_seat_allow
            %td= human_boolean t.default_reservation_allow
      %tfoot
        %tr
          %td{colspan: '100%'}
            = paginate @types
            = page_entries_info @types