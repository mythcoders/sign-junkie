- page_title 'Tax Rates'

.header.mt-md-2
  .header-body
    .row.align-items-center
      .col
        %h6.header-pretitle
          Tax Periods
        %h1.header-title
          %i.fad.fa-calendar-alt
          Search
      .col-auto
        = link_to 'New Tax Period', new_admin_tax_period_path, class: 'btn btn-primary lift'

.card
  %table.table.table-striped.border-bottom.card-table
    %thead
      %tr
        %th Name
        %th= sort_link(@q, :start_date)
    %tbody
      - @tax_periods.each do |tax_period|
        %tr
          %td= link_to tax_period.name, admin_tax_period_path(tax_period)
          %td= tax_period.start_date
    %tfoot
      %tr
        %td{colspan: '100%'}
          = paginate @tax_periods
          = page_entries_info @tax_periods
