.form-row
  .form-group.col
    = f.label :name, class: 'col-form-label'
    = f.text_field :name, class: 'form-control'
  .form-group.col
    = f.label :color_type, class: 'col-form-label'
    = f.select :color_type,
      options_from_collection_for_select(color_types, 'value', 'label', f.object.color_type),
      { include_blank: '- Please Select -' },
      { class: 'form-control custom-select', required: true }
.form-group
  = f.label :hex_code, class: 'col-form-label'
  = f.color_field :hex_code, class: 'form-control'
.form-group
  .custom-control.custom-checkbox
    = f.check_box :active, class: 'custom-control-input'
    = f.label :active, class: 'custom-control-label'
