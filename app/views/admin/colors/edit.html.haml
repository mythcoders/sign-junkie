- page_title 'Edit', @color.name, 'Colors'

.header
  .header-body
    .row.align-items-center
      .col
        %h6.header-pretitle
          Colors
        %h1.header-title
          %i.fad.fa-palette
          = "Edit #{@color.name}"

= form_for @color, url: admin_color_path(@color), method: :patch do |f|
  .row.justify-content-center
    .col.col-lg-8.col-md-12
      .card.mt-3
        .card-body
          = error_messages_for 'color'
          = render partial: 'admin/colors/form', locals: { f: f }
        .card-footer
          = link_to 'Cancel', admin_colors_path, class: 'btn btn-outline-secondary'
          = f.submit 'Save', class: 'btn btn-success'
          .float-right
            = link_to "Delete", admin_color_path(@color), method: :delete, class: 'btn btn-outline-danger',
              data: {confirm: 'Are you sure want to delete this color? This can not be undone!'}
