= f.hidden_field :id
.form-group
  = f.label :title, class: 'col-form-label'
  = f.text_field :title, class: 'form-control'
.form-row
  .form-group.col
    = f.label :start_at, class: 'col-form-label'
    #startpicker.input-group.date{"data-target-input": "nearest", 'data-date-time-picker': ''}
      = f.text_field :start_at, value: lifp(@announcement.start_at), class: 'form-control datetimepicker-input', 'data-target': '#startpicker'
      .input-group-append{"data-target": "#startpicker", "data-toggle": "datetimepicker"}
        .input-group-text
          = fa_regular 'calendar'
  .form-group.col
    = f.label :end_at, class: 'col-form-label'
    #endpicker.input-group.date{"data-target-input": "nearest", 'data-date-time-picker': ''}
      = f.text_field :end_at, value: lifp(@announcement.end_at), class: 'form-control datetimepicker-input', 'data-target': '#endpicker'
      .input-group-append{"data-target": "#endpicker", "data-toggle": "datetimepicker"}
        .input-group-text
          = fa_regular 'calendar'
.form-group
  = f.rich_text_area :content
