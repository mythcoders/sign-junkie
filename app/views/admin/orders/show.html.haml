= render partial: 'admin/orders/header'

- if @order.status == :open
  .alert.alert-info
    The customer has started this order but has yet to complete it!
.row
  .col-4
    .card.card-primary
      %h5.card-header.bg-primary.text-white
        = fa_light 'shopping-bag'
        = "Order ##{@order.order_number} - #{@order.status}"
      .card-body
        .form-group.row
          %label.col-form-label.col-6 Customer
          .form-control-plaintext.col
            = link_to @order.customer.full_name, admin_customer_path(@order.customer)
        .form-group.row
          %label.col-form-label.col-6 Date Created
          .form-control-plaintext.col= lifp(@order.date_created, :short)
        .form-group.row
          %label.col-form-label.col-6 Date Placed
          .form-control-plaintext.col= lifp(@order.date_placed, :short)
        .form-group.row
          %label.col-form-label.col-6 Date Fulfilled
          - if @order.date_fulfilled.present?
            .form-control-plaintext.col= l @order.date_fulfilled, format: :short

        .form-group.row
          %label.col-form-label.col-6 Payment Method
          .form-control-plaintext.col= @order.payment_method
        .form-group.row
          %label.col-form-label.col-6 Billing Address
          .form-control-plaintext.col
            - if @order.address_id.present?
              %strong= @order.address.nickname
              %br= raw(@order.address.display_formatted(1))
  .col-8
    .card
      %h5.card-header.bg-primary.text-white
        = fa_light 'clipboard-list'
        Details
      .table-responsive-md
        = render partial: 'admin/order_items/show'
    %br
    .card
      %h5.card-header.bg-primary.text-white
        = fa_light 'sticky-note'
        Notes
      = render partial: 'admin/order_notes/show'
