= form_for @order, url: orders_path do |f|
  .row
    .col-12.col-sm-5
      .card.card-primary
        %h4.card-header.bg-primary.text-white
          Payment
        = render partial: 'orders/form', locals: { f: f }
    .col-12.col-sm-7
      .card
        %h4.card-header.bg-primary.text-white
          = fa_regular 'shopping-bag'
          Order Summary
        .table-responsive-md
          %table.table.table-striped.table-bordered.table-border-fix
            %tbody
              %tr
              - @payment.order_items.each do |i|
                %tr
                  %td= i.description
                  %td.text-right.action-column
                    %strong= number_to_currency(i.price)
              - if @payment.taxed?
                %tr
                  %td= "Estimated tax to be collected (#{@payment.tax_percentage}%)"
                  %td.text-right.action-column
                    %strong#order_total_tax= number_to_currency(@payment.tax_amount)
            %tfoot
              %tr.bg-primary.text-white
                %td Total due today
                %td.text-right
                  %strong#order_total_due= number_to_currency(@payment.amount)

= render partial: 'checkout'
