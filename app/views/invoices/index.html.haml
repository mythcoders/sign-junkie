.card
  %h5.card-header.bg-primary.text-white
    = fa_solid'shopping-bag'
    My Orders
  %table.table.table-bordered.table-striped.table-border-fix
    %thead
      %tr
        %th Number
        %th Date
        %th Status
    %tbody
      - @orders.each do |o|
        %tr{data: { 'clickable-row': '', 'href': order_path(o) }}
          %td= o.order_number
          %td= lifp(o.date_created, :short)
          %td= o.status
  .card-footer
    = paginate @orders
    = page_entries_info @orders
