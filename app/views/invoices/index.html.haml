.row.justify-content-center.mt-3
  .col
    .card.mb-3
      %h2.card-header.bg-primary.text-white.text-center
        = fa_solid 'file-invoice'
        My Orders

.table-responsive-md
  %table.table.table-bordered.table-striped.table-hover
    %thead.bg-primary.text-white
      %tr
        %th Order Number
        %th Total Price
        %th Date Created
    %tbody
      - @invoices.each do |o|
        %tr{data: { 'clickable-row': '', 'href': invoice_path(o) }}
          %td= o.identifier
          %td= number_to_currency o.grand_total
          %td= lifp(o.created_at, :short)
    %tfoot
      %tr
        %td{colspan: '100%'}
          = paginate @invoices
          = page_entries_info @invoices, entry_name: 'order'
